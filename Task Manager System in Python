import tkinter as tk
from tkinter import messagebox, ttk
from tkcalendar import DateEntry
from datetime import datetime
import openpyxl
import os

class Task:
    def __init__(self, person_name, division, name, priority, due_date):
        self.person_name = person_name
        self.division = division
        self.name = name
        self.priority = priority
        self.due_date = due_date

class TaskManagerApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Task Manager")

        self.tasks = []

        self.person_name_var = tk.StringVar()
        self.division_var = tk.StringVar()
        self.task_name_var = tk.StringVar()
        self.priority_var = tk.StringVar()
        self.due_date_var = tk.StringVar()

        self.create_widgets()

    def create_widgets(self):
        # Person Name Label and Entry
        tk.Label(self.root, text="Person Name:").grid(row=0, column=0, sticky="w")
        person_name_entry = tk.Entry(self.root, textvariable=self.person_name_var)
        person_name_entry.grid(row=0, column=1, padx=10, pady=5)

        # Division Label and Entry
        tk.Label(self.root, text="Division:").grid(row=1, column=0, sticky="w")
        division_entry = tk.Entry(self.root, textvariable=self.division_var)
        division_entry.grid(row=1, column=1, padx=10, pady=5)
        
        # Task Name Label and Entry
        tk.Label(self.root, text="Task Name:").grid(row=2, column=0, sticky="w")
        task_name_entry = tk.Entry(self.root, textvariable=self.task_name_var)
        task_name_entry.grid(row=2, column=1, padx=10, pady=5)

        # Priority Label and Dropdown
        tk.Label(self.root, text="Priority:").grid(row=3, column=0, sticky="w")
        priority_values = ["Low", "Medium", "High"]
        priority_dropdown = ttk.Combobox(self.root, textvariable=self.priority_var, values=priority_values)
        priority_dropdown.grid(row=3, column=1, padx=10, pady=5)

        # Due Date Label and Calendar
        tk.Label(self.root, text="Due Date:").grid(row=4, column=0, sticky="w")
        due_date_entry = DateEntry(self.root, textvariable=self.due_date_var, date_pattern="yyyy-mm-dd")
        due_date_entry.grid(row=4, column=1, padx=10, pady=5)

        # Add Task Button
        add_task_button = tk.Button(self.root, text="Add Task", command=self.add_task)
        add_task_button.grid(row=5, column=0, columnspan=2, padx=10, pady=5)

        # Task List Treeview
        self.task_list_treeview = ttk.Treeview(self.root, columns=("Person Name", "Division", "Task Name", "Priority", "Due Date"))
        self.task_list_treeview.grid(row=6, column=0, columnspan=2, padx=10, pady=5)
        self.task_list_treeview.heading("#0", text="Person Name")
        self.task_list_treeview.heading("#1", text="Division")
        self.task_list_treeview.heading("#2", text="Task Name")
        self.task_list_treeview.heading("#3", text="Priority")
        self.task_list_treeview.heading("#4", text="Due Date")

        # Delete Task Button
        delete_task_button = tk.Button(self.root, text="Delete Task", command=self.delete_task)
        delete_task_button.grid(row=7, column=0, padx=10, pady=5, sticky="w")

        # Clear Task Button
        clear_task_button = tk.Button(self.root, text="Clear Task", command=self.clear_task)
        clear_task_button.grid(row=7, column=1, padx=10, pady=5, sticky="e")
        
        # Load from Excel Button
        load_button = tk.Button(self.root, text="Load from Excel", command=self.load_from_excel)
        load_button.grid(row=7, column=0, columnspan=2, padx=10, pady=5)

    def add_task(self):
        person_name = self.person_name_var.get()
        division = self.division_var.get()
        name = self.task_name_var.get()
        priority = self.priority_var.get()
        due_date = self.due_date_var.get()

        if person_name and division and name and priority and due_date:
            task = Task(person_name, division, name, priority, due_date)
            self.tasks.append(task)

            self.task_list_treeview.insert("", tk.END, text=task.person_name, values=(task.division, task.name,
                                                                               task.priority, task.due_date))

            self.person_name_var.set("")
            self.division_var.set("")
            self.task_name_var.set("")
            self.priority_var.set("")
            self.due_date_var.set("")
        else:
            messagebox.showerror("Error", "Please fill in all fields.")

    def delete_task(self):
        selected_item = self.task_list_treeview.selection()
        if selected_item:
            task_name = self.task_list_treeview.item(selected_item)["values"][1]  # Get task name from values
            for task in self.tasks:
                if task.name == task_name:
                    self.tasks.remove(task)
                    self.task_list_treeview.delete(selected_item)
                    break

    def clear_task(self):
        self.person_name_var.set("")
        self.division_var.set("")
        self.task_name_var.set("")
        self.priority_var.set("")
        self.due_date_var.set("")

    def load_from_excel(self):
        current_directory = os.getcwd()
        file_path = os.path.join(current_directory, "taskmanager.xlsx")
        if not os.path.exists(file_path):
            messagebox.showerror("Error", "No tasks found. Excel file not found.")
            return
            
            
        self.clear_task()

        wb = openpyxl.load_workbook(file_path)
        ws = wb.active
        
        for row in ws.iter_rows(min_row=2, values_only=True):
            person_name, division, task_name, priority, due_date = row
            task = Task(person_name, division, task_name, priority, due_date)
            self.tasks.append(task)
            self.task_list_treeview.insert("", tk.END, text=task.person_name, values=(task.division, task.name,
                                                                           task.priority, task.due_date))
        messagebox.showinfo("Success", "Tasks loaded from Excel.")

    def save_to_excel(self):
        current_directory = os.getcwd()
        file_path = os.path.join(current_directory, "taskmanager.xlsx")
        wb = openpyxl.Workbook()
        ws = wb.active
        ws.append(["Person Name", "Division", "Task Name", "Priority", "Due Date"])
        for task in self.tasks:
            ws.append([task.person_name, task.division, task.name, task.priority, task.due_date])
        wb.save(file_path)
        messagebox.showinfo("Success", f"Data saved to {file_path}.")

root = tk.Tk()
app = TaskManagerApp(root)
save_button = tk.Button(root, text="Save to Excel", command=app.save_to_excel)
save_button.grid(row=8, column=0, columnspan=2, padx=10, pady=5)
root.mainloop()
